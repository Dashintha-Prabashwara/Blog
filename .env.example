# ============================================
# Code & Canvas Configuration
# ============================================
# INSTRUCTIONS:
# 1. Copy this file and rename it to: .env
# 2. Update the values below if needed
# 3. Default values work for standard XAMPP installation
# ============================================

# Database Configuration
# Leave these as default for XAMPP unless you changed MySQL settings
DB_HOST=127.0.0.1
DB_NAME=code_canvas
DB_USER=root
DB_PASS=

# Application Settings
# Change APP_ENV to 'production' when deploying live
APP_ENV=development
APP_URL=http://codecanvasblog.infinityfree.me
APP_NAME="Code & Canvas"

# Upload Settings (in bytes)
# Default: 5MB max file size
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Session Settings (in seconds)
# Default: 1 hour session lifetime
SESSION_LIFETIME=3600
SESSION_NAME=code_canvas_session

# Security
CSRF_TOKEN_LENGTH=32
